<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/img_question"
            android:id="@+id/img_question"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="问题编号"
            android:textSize="15sp"
            android:gravity="center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="GL1_12"
            android:id="@+id/tv_problem_num"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="15sp"
            android:id="@+id/tv_pro_time"
            android:text="2018.1.1"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_pro_type"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="民事纠纷"
                    android:textSize="15sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:maxLines="1"
                    android:id="@+id/tv_pro_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="qwer"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="位置"
                    android:textSize="15sp"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:maxLines="1"
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_location"
                    android:textSize="15sp"
                    android:text="qwer"/>

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btn_jiedan"
            android:text="接单"
            android:textSize="15sp"
            android:textColor="#fff"
            android:background="@drawable/bg_chosen"
            android:layout_width="60dp"
            android:layout_height="35dp" />

        <ImageView
            android:id="@+id/img_mark"
            android:visibility="gone"
            android:src="@drawable/img_remark"
            android:layout_width="40dp"
            android:layout_height="50dp"
            />

    </LinearLayout>


</LinearLayout>