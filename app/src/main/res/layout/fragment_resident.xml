<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden"
    tools:context=".fragment.ResidentFragment">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:id="@+id/layout_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/et_check_num"
            android:maxLines="1"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:background="@drawable/linear_round_coner_bg"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:hint="请输入验证码"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/btn_check"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#13AB92"/>

    </LinearLayout>




    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/layout_resident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_shenfenzheng"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证"
                android:gravity="center"
                android:background="#13AB92"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_huzhao"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="护照"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_jiashizheng"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="驾驶证"
                android:gravity="center"
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tv_shiminka"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="市民卡"
                android:gravity="center"
                android:textSize="20sp"/>

        </LinearLayout>


        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/linear_round_coner_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_number"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="证件号"
                android:textSize="20sp"
                />

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_search"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/linear_round_coner_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_name"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="姓名"
                android:textSize="20sp"
                />

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_search"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:padding="5dp"
            android:background="@drawable/linear_round_coner_bg"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_room"
                android:maxLines="1"
                android:padding="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="户号"
                android:textSize="20sp"
                />

            <ImageView

                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/img_search"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>

        <Button
            android:id="@+id/img_search"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="查询"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="#13AB92"/>

        <RelativeLayout
            android:id="@+id/layout_register"
            android:layout_marginTop="30dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#13AB92"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:src="@drawable/people"/>
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="居民登记"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>


    </LinearLayout>
    </ScrollView>

</LinearLayout>
